<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="16dp"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/resize_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ch.deletescape.lawnchair.views.VerticalResizeView
        android:id="@+id/resize_view"
        android:layout_marginTop="8dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_qsb_pill"
        android:backgroundTint="?attr/colorAccent" />
    <CheckBox
        android:id="@+id/add_widget_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_checkbox_widget_background" />
    <CheckBox
        android:id="@+id/display_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_checkbox_widget_display_card_title" />
</LinearLayout>