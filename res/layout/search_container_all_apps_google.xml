<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.nexuslauncher.qsb.AllAppsQsbLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_container_all_apps"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/qsb_widget_height"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center|top"
    android:background="@drawable/bg_qsb_click_feedback"
    android:contentDescription="@string/search"
    android:translationY="30.0dip">

    <ImageView
        android:id="@id/g_icon"
        android:layout_width="@dimen/qsb_mic_width"
        android:layout_height="fill_parent"
        android:layout_gravity="start|center"
        android:layout_marginTop="-6.0dip"
        android:layout_marginBottom="-6.0dip"
        android:scaleType="center"
        android:src="@drawable/ic_super_g_color" />

    <ImageView
        android:id="@id/mic_icon"
        android:layout_width="@dimen/qsb_mic_width"
        android:layout_height="fill_parent"
        android:layout_gravity="end|center"
        android:layout_marginTop="-6.0dip"
        android:layout_marginBottom="-6.0dip"
        android:background="?android:selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@string/label_voice_search"
        android:focusable="false"
        android:scaleType="center"
        android:src="@drawable/ic_mic_color" />

    <include layout="@layout/qsb_hint" />
</com.google.android.apps.nexuslauncher.qsb.AllAppsQsbLayout>
