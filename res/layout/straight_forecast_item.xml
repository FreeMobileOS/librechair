<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginEnd="16dp"
    android:gravity="center_vertical">
    <ImageView
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/forecast_weather_icon"
        android:layout_width="@dimen/activity_weather_icon_size_narrow"
        android:layout_height="@dimen/activity_weather_icon_size_narrow"
        android:layout_gravity="center|start"
        android:src="@drawable/weather_02" />
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/forecast_current_time"
            android:text="@string/placeholder_forcast_time"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/forecast_current_temperature"
            android:text="@string/activity_weather_title_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>